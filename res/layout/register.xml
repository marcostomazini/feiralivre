<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTitle" android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editInfo" android:layout_below="@+id/editTitle"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView2"/>
    <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/editInfo" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manhã"
                android:id="@+id/radioManha" android:layout_below="@+id/editInfo"
                android:checked="false"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarde"
                android:id="@+id/radioTarde"
                android:checked="false"
                android:layout_alignTop="@+id/radioManha" android:layout_toRightOf="@+id/radioManha"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noite"
                android:id="@+id/radioNoite"
                android:checked="false"
                android:layout_below="@+id/editInfo" android:layout_toRightOf="@+id/radioTarde"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Madrugada"
                android:id="@+id/radioMadrugada"
                android:checked="false"
                android:layout_alignTop="@+id/radioNoite" android:layout_toRightOf="@+id/radioNoite"/>
    </RadioGroup>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:id="@+id/textView"
            android:layout_above="@+id/editInfo" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informação"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/editInfo" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
</RelativeLayout>

